generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Representant {
  name String @id @map("_id")
  course String
  votes Vote[]
}

model Union {
  name String @id @map("_id")
  votes Vote[]
}

model Vote {
  id String @id @map("_id") @db.ObjectId @default(auto())
  representant String
  union String
  representantName Representant @relation(fields: [representant], references: [name], onDelete: Cascade)
  unionName Union @relation(fields: [union], references: [name], onDelete: Cascade)
}